#:include modules_view.kv
#:include add_word.kv
#:include edit_word.kv
#:include module_delete.kv


<EditModuleWindow@Screen>:

    name: "edit_module"

    name_display: text_input_a
    description_display: text_input_c
    author_display: text_input_b
    total_words: label_a
    words_list: list_a

    on_enter: root.on_open_window()
    on_leave: root.on_close_window()



    canvas.before:

        Rectangle:
            id: rect_a
            pos: self.pos
            size: 1920, 1080
            source: 'background.png'

    BoxLayout:
        orientation: "vertical"
        padding: 10

        canvas.before:
            Color:
                rgba: 0.549, 0.941, 0.627, 1
            Line:
                width: 1.1
                rectangle: self.x + 10, self.y + 10, self.width - 20, self.height - 20

        TextInput:
            id: text_input_a
            height: 40
            size_hint: 1, None
            background_color: 0, 0, 0, 0
            font_name: 'AverageMono.otf'
            foreground_color: 0.549, 0.941, 0.627, 1
            halign: 'center'
            text_size: self.size
            font_size: 28
            readonly: True

            canvas.before:
                Color:
                    rgba: 0.549, 0.941, 0.627, 1
                Line:
                    width: 1.1
                    rectangle: self.x + 4, self.y + 4, self.width - 8, self.height - 8

        TextInput:
            id: text_input_b
            height: 30
            size_hint: 1, None
            background_color: 0, 0, 0, 0
            font_name: 'AverageMono.otf'
            foreground_color: 0.549, 0.941, 0.627, 1
            halign: 'center'
            text_size: self.size
            font_size: 20
            readonly: True

        TextInput:
            id: text_input_c
            height: 60
            size_hint: 1, None
            background_color: 0, 0, 0, 0
            font_name: 'AverageMono.otf'
            foreground_color: 0.549, 0.941, 0.627, 1
            font_size: 20
            readonly: True

            canvas.before:
                Color:
                    rgba: 0.549, 0.941, 0.627, 1
                Line:
                    width: 1
                    rectangle: self.x + 4, self.y + 4, self.width - 8, self.height - 8


        BoxLayout:
            orientation: "horizontal"
            height: 50
            size_hint: 1, None

            Label:
                id: label_a
                text: ""
                color: 0.549, 0.941, 0.627, 1
                font_name: 'AverageMono.otf'
                halign: 'center'
                valign: 'center'
                text_size: self.size
                font_size: 28
                size_hint_y: 0.6, None
                width: root.width * 0.6
                height: 50

            Button:
                text: "EDIT"
                font_name: 'AverageMono.otf'
                color: 0.549, 0.941, 0.627, 1
                font_size: 28
                height: 50
                size_hint: 1, None
                background_down: ''
                background_color: 0, 0, 0, 0
                size_hint_y: 0.4, None
                width: root.width * 0.4

                canvas.before:
                    Color:
                        rgba: 0.549, 0.941, 0.627, 1
                    Line:
                        width: 1.5
                        rectangle: self.x, self.y, self.width, self.height

                on_press:
                    self.background_color = 0.549, 0.941, 0.627, 1
                    self.color = 0, 0, 0, 1

                on_release:
                    self.background_color = 0, 0, 0, 0
                    self.color = 0.549, 0.941, 0.627, 1
                    root.on_edit_button_clicked()

        BoxLayout:
            orientation: "vertical"
            padding: 10

            canvas.before:
                Color:
                    rgba: 0.549, 0.941, 0.627, 1
                Line:
                    width: 1.2
                    rectangle: self.x + 10, self.y + 10, self.width - 20, self.height - 20


            ScrollView:
                MDList:
                    id: list_a

        Button:
            text: "ADD WORD"
            font_name: 'AverageMono.otf'
            color: 0.549, 0.941, 0.627, 1
            font_size: 28
            height: 50
            size_hint: 1, None
            background_down: ''
            background_color: 0, 0, 0, 0

            canvas.before:
                Color:
                    rgba: 0.549, 0.941, 0.627, 1
                Line:
                    width: 1.5
                    rectangle: self.x, self.y, self.width, self.height

            on_press:
                self.background_color = 0.549, 0.941, 0.627, 1
                self.color = 0, 0, 0, 1

            on_release:
                self.background_color = 0, 0, 0, 0
                self.color = 0.549, 0.941, 0.627, 1
                app.root.current = "add_word"


        Button:
            text: "DELETE MODULE"
            font_name: 'AverageMono.otf'
            color: 0.549, 0.941, 0.627, 1
            font_size: 28
            height: 50
            size_hint: 1, None
            background_down: ''
            background_color: 0, 0, 0, 0

            canvas.before:
                Color:
                    rgba: 0.549, 0.941, 0.627, 1
                Line:
                    width: 1.5
                    rectangle: self.x, self.y, self.width, self.height

            on_press:
                self.background_color = 0.549, 0.941, 0.627, 1
                self.color = 0, 0, 0, 1

            on_release:
                self.background_color = 0, 0, 0, 0
                self.color = 0.549, 0.941, 0.627, 1
                app.root.current = "module_delete"


        Button:
            text: "BACK"
            font_name: 'AverageMono.otf'
            color: 0.549, 0.941, 0.627, 1
            font_size: 28
            height: 50
            size_hint: 1, None
            background_down: ''
            background_color: 0, 0, 0, 0

            canvas.before:
                Color:
                    rgba: 0.549, 0.941, 0.627, 1
                Line:
                    width: 1.5
                    rectangle: self.x, self.y, self.width, self.height

            on_press:
                self.background_color = 0.549, 0.941, 0.627, 1
                self.color = 0, 0, 0, 1

            on_release:
                self.background_color = 0, 0, 0, 0
                self.color = 0.549, 0.941, 0.627, 1
                root.on_back_button_clicked()
                app.root.current = "modules_view"


