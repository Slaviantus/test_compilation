#:include modules_view.kv
#:include modules_list.kv

#:import FadeTransition kivy.uix.screenmanager.FadeTransition

WindowManager:
    StartWindow:
    ModulesViewWindow:
    AddModuleWindow:
    EditModuleWindow:
    AddWordWindow:
    EditWordWindow:
    ModuleDeleteWindow:
    ModulesListWindow:
    TypingAnswerWindow:
    IncorrectAnswerWindow:
    ChooseWordWindow:
    IntroductionModuleWindow:
    CongratulationsWindow:



#================================ START PAGE ================================
<StartWindow>:
    name: "start"


    canvas.before:

        Rectangle:
            id: rect_a
            pos: self.pos
            size: 1920, 1080
            source: 'background.png'

    BoxLayout:
        size: root.width, root.height
        orientation: "vertical"
        padding: 20

        BoxLayout:
            size: root.width, root.height * 0.65
            orientation: "vertical"
            size_hint_y: 0.65

        BoxLayout:
            size: root.width, root.height * 0.35
            orientation: "vertical"
            size_hint_y: 0.35
            padding: 10
            spacing: 10

            Button:
                text: "LEARN SERBIAN"
                font_name: 'AverageMono.otf'
                color: 0.549, 0.941, 0.627, 1
                font_size: 28
                background_down: ''
                background_color: 0, 0, 0, 0

                canvas.before:
                    Color:
                        rgba: 0.549, 0.941, 0.627, 1
                    Line:
                        width: 1.5
                        rectangle: self.x, self.y, self.width, self.height

                on_press:
                    self.background_color = 0.549, 0.941, 0.627, 1
                    self.color = 0, 0, 0, 1

                on_release:
                    self.background_color = 0, 0, 0, 0
                    self.color = 0.549, 0.941, 0.627, 1
                    root.manager.transition = FadeTransition()
                    app.root.current = "modules_list"


            Button:
                text: "EDIT"
                font_name: 'AverageMono.otf'
                color: 0.549, 0.941, 0.627, 1
                font_size: 28
                background_down: ''
                background_color: 0, 0, 0, 0

                canvas.before:
                    Color:
                        rgba: 0.549, 0.941, 0.627, 1
                    Line:
                        width: 1.5
                        rectangle: self.x, self.y, self.width, self.height

                on_press:
                    self.background_color = 0.549, 0.941, 0.627, 1
                    self.color = 0, 0, 0, 1

                on_release:
                    self.background_color = 0, 0, 0, 0
                    self.color = 0.549, 0.941, 0.627, 1
                    root.manager.transition = FadeTransition()
                    app.root.current = "modules_view"














